{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "rolls": {
      "$room": {
        ".read": true,
        ".write": true,
        ".validate": "$room.length > 6 && $room.length < 40 && $room.matches(/^[0-9a-zA-Z-]+$/i)"
      }
    },

    "initiative": {
      "$room": {
        ".read": true,
        ".write": true,
        ".validate": "$room.length > 6 && $room.length < 40 && $room.matches(/^[0-9a-zA-Z-]+$/i)"
      }
    },

    "emotes": {
      "$room": {
        ".read": true,
        ".write": true,
        ".validate": "$room.length > 6 && $room.length < 40 && $room.matches(/^[0-9a-zA-Z-]+$/i)"
      }
    },

    // but no other child paths are allowed
    "$other": {
    	".read": false,
    	".write": false,
    }
  }
}
